<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wood Sales Platform</title>
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400;600;700;800&family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a href="/" class="logo">WOOD MARKET</a>
            <div class="nav-links">
                <a href="/">Home</a>
                @if (Context.Request.Cookies.ContainsKey("AuthToken"))
                {
                    <a href="/Admin/Dashboard">Dashboard</a>
                    <a href="/Admin/ManageProducts">Products</a>
                    <a href="/Admin/ManageCategories">Categories</a>
                    <a href="/Admin/Logout" class="btn-primary">Logout</a>
                }
                else
                {
                    <a href="/Admin/Login" class="btn-primary">Admin Login</a>
                }
            </div>
        </div>
    </nav>

    <main>
        @if (TempData["Success"] != null)
        {
            <div class="container">
                <div class="alert alert-success">@TempData["Success"]</div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="container">
                <div class="alert alert-error">@TempData["Error"]</div>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 Wood Sales Platform. Premium Wood Products.</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
